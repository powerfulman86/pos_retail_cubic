        <record id="cubic_pos_config_retail" model="ir.ui.view">
            <field name="name">pos.config</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="pos_retail.pos_config_retail"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='report_sale_summary_show_profit']" position="after">
                    <field name="cash_balance"/>
                </xpath>
                <xpath expr="//field[@name='mrp']" position="after">
                    <field name="modify_bom" attrs="{'invisible': [('mrp', '=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='mrp_produce_direct']" position="after">
                    <field name="hide_mrp_produce_direct" attrs="{'invisible': [('mrp', '=', False)]}"/>
                    <field name="show_mrp_order" attrs="{'invisible': [('mrp', '=', False)]}"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>